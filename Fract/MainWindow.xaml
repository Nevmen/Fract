<Window x:Class="Fract.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fract"
        mc:Ignorable="d"
        Title="{Binding Header}" MinHeight="550" MinWidth="800" Height="550" Width="800">
    <Window.Resources>
        <local:BitmapConverter x:Key="BitmapConverter"/>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="500"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Margin="10" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <StackPanel></StackPanel>
            
        </StackPanel>
        <Image Width="500" Margin="10" Height="500" Grid.Column="0" Source="{Binding Pict, Converter={StaticResource BitmapConverter}}"
       HorizontalAlignment="Stretch"
       VerticalAlignment="Stretch" />

    </Grid>
</Window>
